{
    "name": "vakata/random",
    "description": "A random int / string / byte generator",
    "keywords": [
        "vakata",
        "random"
    ],
    "homepage": "https://github.com/vakata/random",
    "license": "MIT",
    "authors": [
        {
            "name": "vakata",
            "email": "github@vakata.com",
            "homepage": "http://www.vakata.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=5.4.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "5.*",
        "codeclimate/php-test-reporter": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "vakata\\random\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "vakata\\random\\test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "psr2": "php-cs-fixer fix ./src",
        "phpdoc": "phpDocumentor -d ./src -t ./docs"
    }
}
